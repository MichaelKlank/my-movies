{
  "name": "@my-movies/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "generate": "vite build --mode generate --config vite.config.ts 2>/dev/null || true",
    "build": "vite build && tsc --noEmit",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.56.0",
    "@tanstack/react-router": "^1.146.2",
    "@tanstack/react-virtual": "^3.13.18",
    "@tauri-apps/plugin-barcode-scanner": "^2.4.3",
    "@tauri-apps/plugin-http": "^2.5.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "html5-qrcode": "^2.3.8",
    "i18next": "^25.7.4",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@tanstack/react-router-devtools": "^1.146.2",
    "@tanstack/router-vite-plugin": "^1.146.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "jsdom": "^27.4.0",
    "typescript": "^5.6.0",
    "vite": "^7.0.0",
    "vitest": "^4.0.16"
  }
}
