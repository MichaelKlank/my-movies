{
  "name": "my-movies",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @my-movies/web dev",
    "dev:tauri": "pnpm --filter @my-movies/tauri dev",
    "build": "pnpm --filter @my-movies/web build",
    "build:tauri": "pnpm --filter @my-movies/tauri build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "typescript": "^5.6.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "@types/react": "^19.2.7",
      "@types/react-dom": "^19.2.3"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
